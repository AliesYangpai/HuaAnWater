<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">











    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:textColor="@color/qhy_blue"
            android:text="界面偶尔卡死"
            android:textSize="17sp"
            android:textStyle="bold"
            android:singleLine="true"
            />

        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            >
            
            <TextView
                android:id="@+id/tv_pulish_user_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="刘明月发布："
                android:gravity="center_vertical"
                android:textColor="@color/qhy_blue"
                />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/qhy_blue"
                android:gravity="center_vertical"
                android:text="2017-12-26"
                />
            
            
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_images"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_below="@id/ll_edit"
            android:gravity="center_vertical"
            android:visibility="gone"
            >



            <ImageView
                android:id="@+id/iv_feed_1"
                android:layout_width="50dp"
                android:layout_height="35dp"
                />


            <ImageView
                android:id="@+id/iv_feed_2"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <ImageView
                android:id="@+id/iv_feed_3"
                android:layout_width="50dp"
                android:layout_height="35dp"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_text"
            android:text="@string/test_wenzi2"
            android:lineSpacingMultiplier = "1.1"
            android:layout_marginTop="5dp"
            />


    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_all"
        android:layout_marginTop="5dp"
        />



</LinearLayout>