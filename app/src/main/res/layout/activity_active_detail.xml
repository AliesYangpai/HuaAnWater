<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="org.huaanwater.work.ui.activity.active.ActiveDetailActivity">


    <!--title-->

    <include
        android:id="@+id/include_title_active"
        layout="@layout/title_bar_has_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <include
        android:id="@+id/include_participate_in"
        layout="@layout/include_participate_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/include_participate_in"
        android:layout_below="@id/include_title_active"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/tv_news_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="阿萨德科技绿卡时间段"
                    android:textColor="@color/black_text"
                    android:textSize="20sp"

                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/iv_first_pic"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="10dp" />


            </LinearLayout>


            <TextView
                android:id="@+id/tv_active_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/test_wenzi2"
                android:textColor="@color/black_text"
                android:textStyle="bold"
                android:visibility="visible" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_active_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="活动开始时间：2015-6-12"
                    android:textColor="@color/qhy_blue"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/tv_active_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="活动结束时间：2015-6-12"
                    android:textColor="@color/qhy_blue"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/tv_max_join_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="最大参与人数：12"
                    android:textColor="@color/qhy_blue"
                    android:textStyle="bold"
                    />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</RelativeLayout>










































