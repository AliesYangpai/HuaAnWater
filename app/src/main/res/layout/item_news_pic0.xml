<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="10dp"
        >



        <!--标题和描述-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"


            >



            <TextView
                android:id="@+id/tv_news_title0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="一分钟认识富氢水"
                android:textSize="18sp"
                android:gravity="center"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/qhy_blue"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                />




            <TextView
                android:id="@+id/tv_news_summary0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="径阿萨德点击绿卡时间段阿斯达多卡记录啊斯达所多阿斯达所多接口路径阿萨德点击绿卡时间段阿斯达多卡记录啊"
                android:lines="3"
                android:ellipsize="end"
                android:textColor="@color/black_text"
                android:textStyle="bold"
                android:layout_below="@id/tv_news_title0"
                />

        </RelativeLayout>


        <!--底部说明-->



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:id="@+id/tv_create_time0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-11-25"
                android:textColor="@color/text_login"
                />


            <TextView
                android:id="@+id/tv_commont_count0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论15"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_login"

                />



            <TextView
                android:id="@+id/tv_like_count0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赞12"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_login"

                />


        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_all"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />



</LinearLayout>