<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    tools:context="org.huaanwater.work.ui.activity.WelcomeActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


    </android.support.v4.view.ViewPager>


    <org.huaanwater.work.widget.bottomSpot.CirclePageIndicator xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@color/blue_bottom_circle"
        android:padding="10dip"
        app:fillColor="@color/white"
        app:pageColor="@color/province_line_border"
        app:radius="5dp"
        app:strokeColor="@color/white"
        app:strokeWidth="1dp" />


</LinearLayout>

